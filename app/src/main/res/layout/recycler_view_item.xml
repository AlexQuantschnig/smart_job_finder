<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="16dp">

    <com.google.android.material.chip.Chip
        android:id="@+id/chip2"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/chip"
        app:layout_constraintTop_toBottomOf="@+id/jobTitel" />

    <ImageView
        android:id="@+id/jobImg"
        android:layout_width="94dp"
        android:layout_height="115dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="5dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/jobTitel"
        android:layout_width="175dp"
        android:layout_height="39dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="76dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="@android:color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/jobImg"
        app:layout_constraintStart_toEndOf="@+id/jobImg"
        tools:text="@tools:sample/full_names" />

    <TextView
        android:id="@+id/jobDes"
        android:layout_width="248dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="16dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        app:layout_constraintStart_toEndOf="@+id/jobImg"
        app:layout_constraintTop_toBottomOf="@+id/chip2"
        tools:text="@tools:sample/lorem[4:10]" />

    <com.google.android.material.chip.Chip
        android:id="@+id/chip"
        android:layout_width="121dp"
        android:layout_height="44dp"
        android:layout_marginStart="24dp"
        android:layout_marginTop="8dp"
        app:layout_constraintStart_toEndOf="@+id/jobImg"
        app:layout_constraintTop_toBottomOf="@+id/jobTitel" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.0" />

    <ImageButton
        android:id="@+id/likeIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/chip2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.847"
        app:layout_constraintStart_toEndOf="@+id/jobTitel"
        app:srcCompat="@drawable/ic_heart" />
</androidx.constraintlayout.widget.ConstraintLayout>